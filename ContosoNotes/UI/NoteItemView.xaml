<UserControl
    x:Class="ContosoNotes.UI.NoteItemView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:ContosoNotes.UI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance Type=local:NoteItemView}"
    mc:Ignorable="d">

    <UserControl.Resources>
        <Style TargetType="TextBox">
            <Setter Property="AcceptsReturn" Value="True" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="IsSpellCheckEnabled" Value="True" />
            <Setter Property="TextWrapping" Value="Wrap" />
        </Style>
    </UserControl.Resources>

    <TextBox
        Name="NoteItemTextBox"
        KeyUp="NoteItemTextBox_KeyUp"
        PlaceholderText="Notes go here..."
        Text="{x:Bind NoteItem.Text, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
        TextChanged="TextBox_TextChanged" />
</UserControl>
