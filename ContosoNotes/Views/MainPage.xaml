<Page
    x:Class="ContosoNotes.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ContosoNotes.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:ui="using:ContosoNotes.UI"
    xmlns:graphcontrols="using:CommunityToolkit.Uwp.Graph.Controls"
    d:DataContext="{d:DesignInstance Type=local:MainViewModel}"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        
        <!-- Header panel -->
        <Grid BorderThickness="0, 0, 0, 1" BorderBrush="{ThemeResource SystemAccentColor}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- NotePage title-->
            <TextBox 
                BorderThickness="0"
                Text="{Binding CurrentNotePage.PageTitle, Mode=TwoWay}"
                FontWeight="SemiBold"
                Margin="10, 0, 0, 0"
                PlaceholderText="Title"
                VerticalAlignment="Center" />
            
            <!-- Login button -->
            <graphcontrols:LoginButton Grid.Column="1" />
        </Grid>
        
        <!-- NotePage renderer -->
        <ui:NotePageRenderer Grid.Row="1" NotePage="{Binding CurrentNotePage}" />
    </Grid>
</Page>
